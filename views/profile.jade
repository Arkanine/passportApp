doctype html
html
    head
        title Node Authentication
        link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
        link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
        style.
            body        { padding-top:80px; word-wrap:break-word; }
            #payment-form {
                margin: 20px;
            }
    body
        .container
            .page-header.text-center
                h1
                    span.fa.fa-anchor
                    |  Profile Page
                a.btn.btn-default.btn-sm(href='/logout') Logout

            form#payment-form(action='/profile/charge', method='POST')
                script.stripe-button(src='https://checkout.stripe.com/checkout.js',
                    data-key='pk_test_l2LpGR7tPruC43xxqgw59kAa',
                    data-amount='100',
                    data-name='#{user.local.email}',
                    data-description='2 widgets ($20.00)',
                    data-locale='auto')

            h2 Your balance: #{ user.local.balance / 100 }$

            .row
                // LOCAL INFORMATION
                .col-sm-6
                    .well
                        h3
                            span.fa.fa-user
                            |  Local

                        if user.local.email
                            p
                                strong id
                                | : #{user._id}
                                br
                                strong email
                                | : #{user.local.email}
                                br
                                strong password
                                | : #{user.local.password}
                            a.btn.btn-default(href="/unlink/local") Unlink
                        else
                            a.btn.btn-primary(href="/connect/local") Connect Local
                // FACEBOOK INFORMATION
                .col-sm-6
                    .well
                        h3.text-primary
                            span.fa.fa-facebook
                            |  Facebook

                        if user.facebook.token
                            p
                                strong id
                                | : #{user.facebook.id}
                                br
                                strong token
                                | :  #{user.facebook.token}
                                br
                                strong name
                                | :  #{user.facebook.name}
                                br
                                strong email
                                | :  #{user.facebook.email}
                                br
                            a.btn.btn-default(href="/unlink/facebook") Unlink
                        else
                            a.btn.btn-primary(href="/connect/facebook") Connect Facebook

                // TWITTER INFORMATION
                .col-sm-6
                    .well
                        h3.text-info
                            span.fa.fa-twitter
                            |  Twitter

                        if user.twitter.token
                            p
                                strong id
                                | : #{user.twitter.id}
                                br
                                strong token
                                | : #{user.twitter.token}
                                br
                                strong username
                                | : #{user.twitter.username}
                                br
                                strong displayName
                                | : #{user.twitter.displayName}

                            a.btn.btn-default(href="/unlink/twitter") Unlink
                        else
                            a.btn.btn-primary(href="/connect/twitter") Connect Twitter

                // GOOGLE INFORMATION
                .col-sm-6
                    .well
                        h3.text-danger
                            span.fa.fa-google-plus
                            |  Google

                        if user.google.token
                            p
                                strong id
                                | : #{user.google.id}
                                br
                                strong token
                                | : #{user.google.token}
                                br
                                strong email
                                | : #{user.google.email}
                                br
                                strong name
                                | : #{user.google.name}
                            a.btn.btn-default(href="/unlink/google") Unlink
                        else
                            a.btn.btn-primary(href="/connect/google") Connect Google

                // LINKEDIN INFORMATION
                .col-sm-6
                    .well
                        h3.text-warning
                            span.fa.fa-linkedin
                            |  LinkedIn

                        if user.linkedIn.token
                            p
                                strong id
                                | : #{user.linkedIn.id}
                                br
                                strong token
                                | : #{user.linkedIn.token}
                                br
                                strong Given name
                                | : #{user.linkedIn.givenName}
                                br
                                strong Family name
                                | : #{user.linkedIn.familyName}
                                br
                                strong email
                                | : #{user.linkedIn.email}
                            a.btn.btn-default(href="/unlink/linkedin") Unlink
                        else
                            a.btn.btn-primary(href="/connect/linkedin") Connect LindedIn










